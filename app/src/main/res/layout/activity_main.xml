<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:clickable="true"
    android:focusableInTouchMode="true"
    >

    <EditText
        android:id="@+id/edit_txt_decimal"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:ems="8"
        android:gravity="center"
        android:hint="@string/_10"
        android:inputType="textShortMessage|number|text"
        android:maxLength="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_binary"
        app:layout_constraintVertical_bias="0.257" />

    <TextView
        android:id="@+id/txt_decimal"
        android:layout_width="194dp"
        android:layout_height="54dp"
        android:layout_marginBottom="452dp"
        android:gravity="center"
        android:text="@string/decimal"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_txt_binary"
        app:layout_constraintVertical_bias="0.862" />

    <TextView
        android:id="@+id/txt_binary"
        android:layout_width="194dp"
        android:layout_height="54dp"
        android:gravity="center"
        android:text="@string/binary"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />

    <Button
        android:id="@+id/btn_result_binary"
        android:layout_width="135dp"
        android:layout_height="65dp"
        android:background="@drawable/btnshape"
        android:text="@string/convert_to_decimal"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_txt_decimal"
        app:layout_constraintVertical_bias="0.169" />

    <Button
        android:id="@+id/btn_result_decimal"
        android:layout_width="135dp"
        android:layout_height="65dp"
        android:background="@drawable/btnshape00"
        android:text="@string/convert_to_binary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_txt_decimal"
        app:layout_constraintVertical_bias="0.169" />

    <EditText
        android:id="@+id/edit_txt_binary"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:ems="64"
        android:gravity="center"
        android:hint="@string/_01010"
        android:inputType="number|text"
        android:maxLength="25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_binary"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>